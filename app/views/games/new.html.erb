<h1>New Game</h1>
<ul class=letterlist>
<% @letters.each do |letter| %>
  <li><%= letter %></li>
<% end %>
</ul>
<form action="/score" method="POST" data-turbo="false">
  <label for="question">Which word can you create?</label><br>
  <input type="text" name="userinput" value="<%= params[:userinput] %>" label="Write your longest word">

  <input type="submit" value="Count my score!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
